{
  "compilerOptions": {
    "outDir": "./dist",   
    "rootDir": "./src",   
    "baseUrl": "./src",   
    "paths": {
      "*": ["*"]
    },
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ES6",
    "module": "commonjs"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"],
  "files":["types.d.ts"]
}

